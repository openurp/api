<?xml version="1.0" encoding="utf-8"?>
<report title="数据库设计说明" reserveImageUmlScript="true">
  <system name="学历学位库管理及学生自助下载学历学位翻译件" version="1.0.0"/>
  <database xml="database.xml"/>
  <pages template="singlehtml" extension=".html">
    <page name="index"/>
  </pages>

  <schemas>
    <schema name="base" title="基础信息">
      <module name="common" title="组织架构">
        <group name="core" title="表格" tables="campus*,user*,department*,semester*">
        </group>
      </module>
      <module name="edu" title="教学基础信息">
        <group name="core" title="表格" tables="squads,courses*,majors,directions,students*,teachers">
          <image name="squad" title="班级" tables="squads,majors,directions,departments" direction="left to right"/>
          <image name="student" title="学生" tables="student*,directions,majors,departments,squads" direction="left to right"/>
        </group>
      </module>

      <module name="std" title="学生基础信息">
        <group name="core" title="表格" tables="*">
        <image name="graduate" title="毕业信息" tables="graduates*,student*" direction="left to right"/>
        </group>
      </module>
    </schema>

    <schema name="spa" title="自助打印">
      <module name="core" title="打印和下载">
        <group name="clazz" title="表格" tables="*">
          <image name="doc" title="文档配置" tables="*" direction="top to bottom"/>
        </group>
      </module>
    </schema>

    <schema name="std" title="毕业信息">
      <module name="graduation" title="学历库">
        <group name="core" title="表格" tables="*">
          <image name="result" title="毕业和学位审核" tables="graduate*,degree*" />
        </group>
      </module>
    </schema>

  </schemas>
</report>
